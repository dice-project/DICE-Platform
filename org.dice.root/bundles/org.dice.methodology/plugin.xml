<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="tocDice.xml"
            primary="true">
      </toc>
      <toc
            file="tocIntroduction.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.cheatsheets.cheatSheetContent">
      <category
            id="org.dice.methodology.category"
            name="DICE Framework">
      </category>
      <category
            id="org.dice.methodology.ide.category"
            name="DICE IDE"
            parentCategory="org.dice.methodology.category">
      </category>
      <category
            id="org.dice.methodology.papyrus.category"
            name="DICE Papyrus"
            parentCategory="org.dice.methodology.category">
      </category>
      <category
            id="org.dice.methodology.tools.category"
            name="DICE Tools"
            parentCategory="org.dice.methodology.category">
      </category>
      <cheatsheet
            category="org.dice.methodology.ide.category"
            composite="false"
            contentFile="cheatsheets/ide/ide_configure.xml"
            id="org.dice.methodology.cheatsheet.ide.configuration"
            name="IDE Initial configuration">
         <description>
            Configure your IDE property on the first run to have a good experience working with DICE
         </description>
      </cheatsheet>
      <cheatsheet
            category="org.dice.methodology.ide.category"
            composite="false"
            contentFile="cheatsheets/ide/ide_update.xml"
            id="org.dice.methodology.cheatsheet.ide.update"
            name="IDE Update components">
         <description>
            Keep your IDE updated. How to update it automatically or manually
         </description>
      </cheatsheet>
      <cheatsheet
            category="org.dice.methodology.ide.category"
            composite="false"
            contentFile="cheatsheets/ide/ide_install.xml"
            id="org.dice.methodology.cheatsheet.ide.install"
            name="IDE Install new software">
         <description>
            Install new third party software using the Eclipse techniques
         </description>
      </cheatsheet>
      <cheatsheet
            category="org.dice.methodology.ide.category"
            composite="false"
            contentFile="cheatsheets/ide/ide_git.xml"
            id="org.dice.methodology.cheatsheet.ide.git"
            name="IDE Connect to GIT">
         <description>
            Configure a GIT repository with the IDE
         </description>
      </cheatsheet>
      <cheatsheet
            category="org.dice.methodology.ide.category"
            composite="false"
            contentFile="cheatsheets/ide/ide_svn.xml"
            id="org.dice.methodology.cheatsheet.ide.svn"
            name="IDE Connect to SVN">
         <description>
            Configure a SVN repository with the IDE
         </description>
      </cheatsheet>
      <cheatsheet
            category="org.dice.methodology.papyrus.category"
            composite="false"
            contentFile="cheatsheets/papyrus/papyrus_create.xml"
            id="org.dice.methodology.cheatsheet.papyrus.create"
            name="Create a Papyrus project and model">
         <description>
            Start working with Papyrus on DICE: create a new project and a new model and start modeling
         </description>
      </cheatsheet>
      <cheatsheet
            category="org.dice.methodology.papyrus.category"
            composite="false"
            contentFile="cheatsheets/papyrus/papyrus_profile.xml"
            id="org.dice.methodology.cheatsheet.papyrus.profile"
            name="Profile and Stereotype Papyrus models">
         <description>
            Apply profiles and stereotype the elements of the Papyrus UML models
         </description>
      </cheatsheet>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.eclipse.ui.cheatsheets.actionSet"
            label="Cheat Sheets"
            visible="true">
         <action
               class="org.eclipse.ui.cheatsheets.CheatSheetExtensionFactory:helpMenuAction"
               id="org.eclipse.ui.cheatsheets.actions.CheatSheetHelpMenuAction"
               label="&amp;Cheat Sheets..."
               menubarPath="help/group.tutorials">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.dice.methodology.CreateModelHandler"
            commandId="org.eclipse.papyrus.uml.diagram.clazz.CreateClassDiagramCommand">
      </handler>
   </extension>
   
   

</plugin>
